<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephen.fyp_driving_lessons.MainActivity"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:padding="10dp"
        android:text="@string/driving_lessons"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:background="#f2f2f2"  />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/learner"
        android:textColor="#000000"
        android:background="#f2f2f2"
        android:fontFamily="sans-serif-condensed"
        android:onClick="LearnerLogin"
        tools:ignore="RtlHardcoded" />

    <Space
        android:layout_width="1dp"
        android:layout_height="3dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:text="@string/instructor"
        android:textColor="#000000"
        android:background="#f2f2f2"
        android:padding="10dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="InstructorLogin"
        tools:ignore="RtlHardcoded" />

    <Space
    android:layout_width="1dp"
    android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/book_your_test"
        android:textColor="#000000"
        android:background="#f2f2f2"
        android:fontFamily="sans-serif-condensed"
        android:onClick="bookATest"
        tools:ignore="RtlHardcoded" />

    <Space
        android:layout_width="1dp"
        android:layout_height="3dp" />

</LinearLayout>
